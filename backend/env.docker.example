# ZKPay Backend Environment Variables for Docker
# Copy this file to .env when using Docker Compose

# Database Configuration
POSTGRES_USER=zkpay
POSTGRES_PASSWORD=zkpay_secure_password
POSTGRES_DB=zkpay

# Blockchain - BSC Configuration
BSC_PRIVATE_KEY=your_private_key_without_0x_prefix
BSC_ZKPAY_PROXY_ADDRESS=0xF5Dc3356F755E027550d82F665664b06977fa6d0

# TRON Configuration (optional)
TRON_PRIVATE_KEY=your_tron_private_key
TRON_ZKPAY_PROXY_ADDRESS=TYourContractAddress

# External Services URLs
ZKVM_BASE_URL=http://zkpay-zkvm:18081
SCANNER_BASE_URL=http://zkpay-blockscanner:18080

# JWT Configuration
JWT_SECRET=change-this-to-a-random-secret-in-production

# Optional: pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@zkpay.local
PGADMIN_DEFAULT_PASSWORD=admin

